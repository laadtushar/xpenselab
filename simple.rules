rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Explicit match for user document
    match /users/{userId} {
      allow read, write: if true;
    }
    
    // Explicit recursive match for all user subcollections
    match /users/{userId}/{document=**} {
      allow read, write: if true;
    }
    
    // Explicit match for groups
    match /groups/{groupId} {
      allow read, write: if true;
    }
    match /groups/{groupId}/{document=**} {
      allow read, write: if true;
    }
    
    // Explicit match for debts
    match /debts/{debtId} {
      allow read, write: if true;
    }
  }
}
