/**
 * @fileoverview Firestore Security Rules for FinanceFlow.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for personal financial data (incomes, expenses, budgets, categories).
 * Users can only access their own data. Groups and shared expenses are collaborative, with access granted to group members.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles.
 * - /users/{userId}/incomes/{incomeId}: Stores income entries for a user.
 * - /users/{userId}/expenses/{expenseId}: Stores expense entries for a user.
 * - /users/{userId}/categories/{categoryId}: Stores user-defined categories.
 * - /users/{userId}/budgets/{budgetId}: Stores budget entries for a user.
 * - /groups/{groupId}: Stores group information.
 * - /groups/{groupId}/sharedExpenses/{expenseId}: Stores shared expenses within a group.
 * - /debts/{debtId}: Stores debt information between users.
 *
 * Key Security Decisions:
 * - Users cannot list all users (the /users collection itself). This prevents information harvesting.
 * - All user-related data is nested under /users/{userId}, enforcing ownership.
 * - Group membership is stored directly on the /groups/{groupId} document for efficient access control.
 *
 * Denormalization for Authorization:
 * - Group membership is denormalized directly on the `/groups/{groupId}` document for simpler, more performant rules.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Protects the /users collection, allowing only document creation with matching userId. Listing all users is denied.
     * @path /databases/{database}/documents/users/{userId}
     * @allow (create) User with matching UID can create their own document.
     * @deny (get, list, update, delete) Any operation other than creating own document.
     * @principle Enforces user-based authorization
     */
    match /users/{userId} {
      allow get: if false;
      allow list: if false; // Prevent listing all users.
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Secures income entries, allowing only the owning user to manage them.
     * @path /databases/{database}/documents/users/{userId}/incomes/{incomeId}
     * @allow (create, get, list, update, delete) User with matching UID can manage their incomes.
     * @deny (create, get, list, update, delete) Any operation from other user.
     * @principle Enforces user-based authorization
     */
    match /users/{userId}/incomes/{incomeId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isSignedIn() && isOwner(userId) && resource.data.userId == userId;
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Secures expense entries, allowing only the owning user to manage them.
     * @path /databases/{database}/documents/users/{userId}/expenses/{expenseId}
     * @allow (create, get, list, update, delete) User with matching UID can manage their expenses.
     * @deny (create, get, list, update, delete) Any operation from other user.
     * @principle Enforces user-based authorization
     */
    match /users/{userId}/expenses/{expenseId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isSignedIn() && isOwner(userId) && resource.data.userId == userId;
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Secures category entries, allowing only the owning user to manage them.
     * @path /databases/{database}/documents/users/{userId}/categories/{categoryId}
     * @allow (create, get, list, update, delete) User with matching UID can manage their categories.
     * @deny (create, get, list, update, delete) Any operation from other user.
     * @principle Enforces user-based authorization
     */
    match /users/{userId}/categories/{categoryId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isSignedIn() && isOwner(userId) && resource.data.userId == userId;
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Secures budget entries, allowing only the owning user to manage them.
     * @path /databases/{database}/documents/users/{userId}/budgets/{budgetId}
     * @allow (create, get, list, update, delete) User with matching UID can manage their budgets.
     * @deny (create, get, list, update, delete) Any operation from other user.
     * @principle Enforces user-based authorization
     */
    match /users/{userId}/budgets/{budgetId} {
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isSignedIn() && isOwner(userId) && resource.data.userId == userId;
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Secures group information, allowing access only to group members.
     * @path /databases/{database}/documents/groups/{groupId}
     * @allow (create, get, list, update, delete) User with matching UID can manage their groups.
     * @deny (create, get, list, update, delete) Any operation from other user.
     * @principle Enforces shared access for collaborators
     */
    match /groups/{groupId} {
      allow get: if isSignedIn() && isGroupMember(groupId);
      allow list: if isSignedIn() && isGroupMember(groupId);
      allow create: if isSignedIn(); // Any signed-in user can create a group
      allow update: if isSignedIn() && isGroupAdmin(groupId); // Only group admin can update
      allow delete: if isSignedIn() && isGroupAdmin(groupId) && resource != null; // Only group admin can delete
    }

    /**
     * @description Secures shared expense entries, allowing access only to group members.
     * @path /databases/{database}/documents/groups/{groupId}/sharedExpenses/{expenseId}
     * @allow (create, get, list, update, delete) User with matching UID can manage shared expenses within group.
     * @deny (create, get, list, update, delete) Any operation from other user.
     * @principle Enforces shared access for collaborators
     */
    match /groups/{groupId}/sharedExpenses/{expenseId} {
      allow get: if isSignedIn() && isGroupMember(groupId);
      allow list: if isSignedIn() && isGroupMember(groupId);
      allow create: if isSignedIn() && isGroupMember(groupId) && request.resource.data.groupId == groupId;
      allow update: if isSignedIn() && isGroupMember(groupId) && request.resource.data.groupId == groupId;
      allow delete: if isSignedIn() && isGroupMember(groupId);
    }

     /**
      * @description Secures debt information, allowing access to involved users.
      * @path /databases/{database}/documents/debts/{debtId}
      * @allow (create, get, list, update, delete) Users involved in the debt can access and modify it.
      * @deny (create, get, list, update, delete) Any operation from other user.
      * @principle Enforces access based on participation in the debt.
      */
    match /debts/{debtId} {
      allow get: if isSignedIn() && isDebtInvolved(resource.data.fromUserId, resource.data.toUserId);
      allow list: if isSignedIn() && (request.query.fromUserId == request.auth.uid || request.query.toUserId == request.auth.uid);
      allow create: if isSignedIn() && (request.resource.data.fromUserId == request.auth.uid || request.resource.data.toUserId == request.auth.uid) && request.resource.data.createdBy == request.auth.uid;
      allow update: if isSignedIn() && (resource.data.fromUserId == request.auth.uid || resource.data.toUserId == request.auth.uid) && request.resource.data.createdBy == resource.data.createdBy;
      allow delete: if isSignedIn() && isDebtCreatedBy(resource.data.createdBy);
    }

    // --- Helper Functions ---

    /**
     * @description Checks if the user is signed in.
     * @return {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user is the owner of the document based on the userId.
     * @param {string} userId The user ID to compare with the authenticated user's ID.
     * @return {boolean} True if the user is the owner, false otherwise.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the user is the owner of the document, and the document exists.
     * @param {string} userId The user ID to compare with the authenticated user's ID.
     * @return {boolean} True if the user is the owner, false otherwise.
     */
    function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
    }

    /**
     * @description Checks if the user is a member of the specified group.
     * @param {string} groupId The ID of the group to check.
     * @return {boolean} True if the user is a member of the group, false otherwise.
     */
    function isGroupMember(groupId) {
      return groupId != null && resource.data.members.hasAny([request.auth.uid]);
    }

    /**
     * @description Checks if the user is an admin of the specified group.
     * @param {string} groupId The ID of the group to check.
     * @return {boolean} True if the user is an admin of the group, false otherwise.
     */
     function isGroupAdmin(groupId) {
        return groupId != null && resource.data.createdBy == request.auth.uid;
     }

     /**
      * @description Checks if the user is involved in the debt (either as fromUserId or toUserId).
      * @param {string} fromUserId The ID of the user who owes the money.
      * @param {string} toUserId The ID of the user who is owed the money.
      * @return {boolean} True if the user is involved in the debt, false otherwise.
      */
    function isDebtInvolved(fromUserId, toUserId) {
      return request.auth.uid == fromUserId || request.auth.uid == toUserId;
    }

     /**
      * @description Checks if the user created the debt.
      * @param {string} createdBy The user ID of the creator
      * @return {boolean} True if the user created the debt, false otherwise.
      */
    function isDebtCreatedBy(createdBy) {
        return request.auth.uid == createdBy;
    }
  }
}