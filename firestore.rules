/**
 * @fileoverview Firestore Security Rules for FinanceFlow application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for personal financial data
 * (incomes, expenses, budgets) and provides public read access to global categories.
 * Users can only access their own data.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profile information.
 * - /users/{userId}/incomes/{incomeId}: Stores income entries for a specific user.
 * - /users/{userId}/expenses/{expenseId}: Stores expense entries for a specific user.
 * - /categories/{categoryId}: Stores global expense categories.
 * - /users/{userId}/budgets/{budgetId}: Stores budget entries for a specific user.
 *
 * Key Security Decisions:
 * - Users can only create, read, update, and delete their own user document and
 *   associated income, expense, and budget documents.
 * - Global categories are publicly readable. Writes are not yet defined but implicitly denied.
 * - User listing is disallowed.
 *
 * Denormalization for Authorization:
 *  The `userId` is part of the path for income, expenses, and budgets, and it is duplicated as a
 *  field inside the document. This allows us to validate path-based ownership on both `create`
 *  and `update` operations.
 *
 * Structural Segregation:
 *  Private user data (incomes, expenses, budgets) is stored in user-specific subcollections,
 *  while global categories are stored in a top-level collection. This separation simplifies
 *  access control and enables efficient list operations.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     * @return {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user ID matches the provided user ID.
     * @param {string} userId The user ID to compare against the authenticated user's ID.
     * @return {boolean} True if the user IDs match, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user is the owner of an existing document.
     * @param {string} userId The user ID to compare against the authenticated user's ID.
     * @return {boolean} True if the user IDs match and the document exists, false otherwise.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Defines security rules for user documents.
     * @path /users/{userId}
     * @allow (create) - Authenticated user with ID matching the document ID can create.
     * @allow (get, update, delete) - Authenticated user with ID matching the document ID can get, update, and delete.
     * @deny (list) - Listing all users is not allowed.
     * @deny (create) - Unauthenticated users cannot create user profiles.
     * @deny (update) - Users cannot change their ID.
     * @principle Enforces document ownership for reads and writes; validates new user creation.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;

      allow create: if isOwner(userId) && request.resource.data.id == request.auth.uid;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id; //Enforce immutability of ID
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Defines security rules for income documents within a user's collection.
     * @path /users/{userId}/incomes/{incomeId}
     * @allow (create) - Authenticated user with ID matching the parent's userId can create.
     * @allow (get, update, delete) - Authenticated user with ID matching the parent's userId can get, update, and delete.
     * @deny (list) - Listing all incomes for all users is not allowed.
     * @deny (create) - Unauthenticated users cannot create income entries.
     * @deny (update) - Users cannot change their userId.
     * @principle Enforces document ownership for reads and writes; validates relational integrity with parent user.
     */
    match /users/{userId}/incomes/{incomeId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId; //Enforce immutability of userId
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Defines security rules for expense documents within a user's collection.
     * @path /users/{userId}/expenses/{expenseId}
     * @allow (create) - Authenticated user with ID matching the parent's userId can create.
     * @allow (get, update, delete) - Authenticated user with ID matching the parent's userId can get, update, and delete.
     * @deny (list) - Listing all expenses for all users is not allowed.
     * @deny (create) - Unauthenticated users cannot create expense entries.
     * @deny (update) - Users cannot change their userId.
     * @principle Enforces document ownership for reads and writes; validates relational integrity with parent user.
     */
    match /users/{userId}/expenses/{expenseId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId; //Enforce immutability of userId
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Defines security rules for budget documents within a user's collection.
     * @path /users/{userId}/budgets/{budgetId}
     * @allow (create) - Authenticated user with ID matching the parent's userId can create.
     * @allow (get, update, delete) - Authenticated user with ID matching the parent's userId can get, update, and delete.
     * @deny (list) - Listing all budgets for all users is not allowed.
     * @deny (create) - Unauthenticated users cannot create budget entries.
     * @deny (update) - Users cannot change their userId.
     * @principle Enforces document ownership for reads and writes; validates relational integrity with parent user.
     */
    match /users/{userId}/budgets/{budgetId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);

      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId; //Enforce immutability of userId
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Defines security rules for category documents.
     * @path /categories/{categoryId}
     * @allow (get, list) - All users can read categories.
     * @deny (create, update, delete) - Categories are not editable by users (admin-only in full implementation).
     * @principle Allows public read access; restricts writes to administrators (currently disabled).
     */
    match /categories/{categoryId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }
  }
}