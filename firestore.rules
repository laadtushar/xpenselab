/**
 * @fileoverview Firestore Security Rules for FinanceFlow application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for personal finance data
 * and shared access control for collaborative group expenses.
 *
 * Data Structure:
 * - User profiles are stored under /users/{userId}.
 * - User-specific data (incomes, expenses, categories, budgets) is nested under /users/{userId}/...
 * - Group data is stored under /groups/{groupId}.
 * - Shared expenses for groups are stored under /groups/{groupId}/sharedExpenses/{sharedExpenseId}.
 * - Debts are stored under /debts/{debtId}.
 *
 * Key Security Decisions:
 * - Users can only access their own profile and associated data.
 * - Group access is controlled by membership lists on the group documents.
 * - Listing of users is disallowed.
 * - Data consistency is enforced between the path and document's internal user ID.
 *
 * Denormalization for Authorization:
 * - Group documents contain a `members` array to easily check group membership.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile data.
     * @path /users/{userId}
     * @allow (create) - User can create their own profile if the userId matches their auth UID.
     * @allow (get, update, delete) - User can only access their own profile.
     * @deny (create) - User cannot create a profile with a userId that doesn't match their auth UID.
     * @deny (get, update, delete) - User cannot access another user's profile.
     * @principle Enforces document ownership and validates relational integrity.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && exists(/databases/$(database)/documents/users/$(userId));
      }

      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == request.auth.uid;
      allow get: if isOwner(userId);
      allow list: if false;
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to income entries for a specific user.
     * @path /users/{userId}/incomes/{incomeId}
     * @allow (create, get, list, update, delete) - User can only access their own income entries.
     * @deny (create, get, list, update, delete) - User cannot access another user's income entries.
     * @principle Enforces document ownership.
     */
    match /users/{userId}/incomes/{incomeId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId, incomeId) {
        return isOwner(userId) && exists(/databases/$(database)/documents/users/$(userId)/incomes/$(incomeId));
      }

      allow create: if isOwner(userId);
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow update: if isOwner(userId) && isExistingOwner(userId, incomeId);
      allow delete: if isOwner(userId) && isExistingOwner(userId, incomeId);
    }

    /**
     * @description Controls access to expense entries for a specific user.
     * @path /users/{userId}/expenses/{expenseId}
     * @allow (create, get, list, update, delete) - User can only access their own expense entries.
     * @deny (create, get, list, update, delete) - User cannot access another user's expense entries.
     * @principle Enforces document ownership.
     */
    match /users/{userId}/expenses/{expenseId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId, expenseId) {
        return isOwner(userId) && exists(/databases/$(database)/documents/users/$(userId)/expenses/$(expenseId));
      }

      allow create: if isOwner(userId);
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow update: if isOwner(userId) && isExistingOwner(userId, expenseId);
      allow delete: if isOwner(userId) && isExistingOwner(userId, expenseId);
    }

    /**
     * @description Controls access to user-specific expense categories.
     * @path /users/{userId}/categories/{categoryId}
     * @allow (create, get, list, update, delete) - User can only access their own categories.
     * @deny (create, get, list, update, delete) - User cannot access another user's categories.
     * @principle Enforces document ownership.
     */
    match /users/{userId}/categories/{categoryId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId, categoryId) {
        return isOwner(userId) && exists(/databases/$(database)/documents/users/$(userId)/categories/$(categoryId));
      }

      allow create: if isOwner(userId);
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow update: if isOwner(userId) && isExistingOwner(userId, categoryId);
      allow delete: if isOwner(userId) && isExistingOwner(userId, categoryId);
    }

    /**
     * @description Controls access to budget entries for a specific user.
     * @path /users/{userId}/budgets/{budgetId}
     * @allow (create, get, list, update, delete) - User can only access their own budget entries.
     * @deny (create, get, list, update, delete) - User cannot access another user's budget entries.
     * @principle Enforces document ownership.
     */
    match /users/{userId}/budgets/{budgetId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId, budgetId) {
        return isOwner(userId) && exists(/databases/$(database)/documents/users/$(userId)/budgets/$(budgetId));
      }

      allow create: if isOwner(userId);
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow update: if isOwner(userId) && isExistingOwner(userId, budgetId);
      allow delete: if isOwner(userId) && isExistingOwner(userId, budgetId);
    }

    /**
     * @description Controls access to group information.
     * @path /groups/{groupId}
     * @allow (create) - Any signed-in user can create a group. The `createdBy` field should match the user's UID.
     * @allow (get, list) - Any signed-in user can read group information.
     * @allow (update, delete) - Only the group creator can update or delete the group.
     * @deny (update, delete) - Other users cannot modify or delete the group.
     * @principle Enforces shared access control via group membership and creator-based ownership for destructive operations.
     */
    match /groups/{groupId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isMember(groupId) {
        return isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
      }

      function isCreator() {
        return isSignedIn() && request.auth.uid == get(/databases/$(database)/documents/groups/$(groupId)).data.createdBy;
      }

      function isExistingCreator(groupId) {
        return isSignedIn() && isCreator() && exists(/databases/$(database)/documents/groups/$(groupId));
      }

      allow create: if isSignedIn() && request.resource.data.createdBy == request.auth.uid;
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow update: if isExistingCreator(groupId);
      allow delete: if isExistingCreator(groupId);
    }

    /**
     * @description Controls access to shared expenses for a group.
     * @path /groups/{groupId}/sharedExpenses/{sharedExpenseId}
     * @allow (create) - Any member of the group can create a shared expense.
     * @allow (get, list) - Any member of the group can read shared expenses.
     * @allow (update, delete) - Only the user who paid for the expense can update or delete it.
     * @deny (update, delete) - Other users cannot modify or delete the expense.
     * @principle Enforces shared access control via group membership and payer-based ownership for destructive operations.
     */
    match /groups/{groupId}/sharedExpenses/{sharedExpenseId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isMember(groupId) {
        return isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
      }

      function isPayer() {
        return isSignedIn() && request.auth.uid == get(/databases/$(database)/documents/groups/$(groupId)/sharedExpenses/$(sharedExpenseId)).data.paidBy;
      }

      function isExistingPayer(groupId, sharedExpenseId) {
        return isSignedIn() && isPayer() && exists(/databases/$(database)/documents/groups/$(groupId)/sharedExpenses/$(sharedExpenseId));
      }

      allow create: if isMember(groupId);
      allow get: if isMember(groupId);
      allow list: if isMember(groupId);
      allow update: if isMember(groupId) && isExistingPayer(groupId, sharedExpenseId);
      allow delete: if isMember(groupId) && isExistingPayer(groupId, sharedExpenseId);
    }

    /**
     * @description Controls access to debt information between two users.
     * @path /debts/{debtId}
     * @allow (create) - Any signed-in user can create a debt.
     * @allow (get) - Any signed-in user can read debt information.
     * @allow (list) - Listing of debts is disallowed.
     * @allow (update) - Only the user who is owed money can update the debt.
     * @allow (delete) - Deletion of debts is disallowed.
     * @principle Enforces access control based on user roles.
     */
    match /debts/{debtId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwedTo() {
        return isSignedIn() && request.auth.uid == get(/databases/$(database)/documents/debts/$(debtId)).data.toUserId;
      }

      function isExistingOwedTo(debtId) {
        return isSignedIn() && isOwedTo() && exists(/databases/$(database)/documents/debts/$(debtId));
      }

      allow create: if isSignedIn();
      allow get: if isSignedIn();
      allow list: if false;
      allow update: if isExistingOwedTo(debtId);
      allow delete: if false;
    }
  }
}