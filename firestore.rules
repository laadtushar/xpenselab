/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict user-ownership model for personal finance data,
 *              while allowing shared access to group-related data.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles, accessible only to the owning user.
 * - /users/{userId}/incomes/{incomeId}: Stores income entries, accessible only to the owning user.
 * - /users/{userId}/expenses/{expenseId}: Stores expense entries, accessible only to the owning user.
 * - /users/{userId}/categories/{categoryId}: Stores categories, accessible only to the owning user.
 * - /users/{userId}/budgets/{budgetId}: Stores budgets, accessible only to the owning user.
 * - /groups/{groupId}: Stores group data, accessible to members of the group.
 * - /groups/{groupId}/sharedExpenses/{expenseId}: Stores shared expenses, accessible to group members.
 * - /debts/{debtId}: Stores debt information, accessible to the user who created the debt.
 *
 * Key Security Decisions:
 * - User data is strictly controlled by the owning user (Ownership pattern).
 * - Group data is shared among group members (Shared Access pattern).
 * - Listing of collections is generally allowed for owners, except where explicitly restricted.
 * - The Debt collection access is limited to the user who created the debt.
 *
 * Denormalization for Authorization:
 * - Group membership is stored directly within the `/groups/{groupId}` document to avoid costly `get()` calls.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile data.
     * @path /users/{userId}
     * @allow (create) User with matching UID can create their own profile.
     * @allow (get, list, update, delete) User with matching UID can access and manage their profile.
     * @deny (create) User cannot create a profile with a mismatched UID.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && exists(/databases/$(database)/documents/users/$(userId));
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to income entries for a specific user.
     * @path /users/{userId}/incomes/{incomeId}
     * @allow (create) User with matching UID can create income entries under their profile.
     * @allow (get, list, update, delete) User with matching UID can access and manage their income entries.
     * @deny (create) User cannot create income entries under a mismatched UID.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/incomes/{incomeId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId);
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to expense entries for a specific user.
     * @path /users/{userId}/expenses/{expenseId}
     * @allow (create) User with matching UID can create expense entries under their profile.
     * @allow (get, list, update, delete) User with matching UID can access and manage their expense entries.
     * @deny (create) User cannot create expense entries under a mismatched UID.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/expenses/{expenseId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId);
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to category entries for a specific user.
     * @path /users/{userId}/categories/{categoryId}
     * @allow (create) User with matching UID can create category entries under their profile.
     * @allow (get, list, update, delete) User with matching UID can access and manage their category entries.
     * @deny (create) User cannot create category entries under a mismatched UID.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/categories/{categoryId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId);
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to budget entries for a specific user.
     * @path /users/{userId}/budgets/{budgetId}
     * @allow (create) User with matching UID can create budget entries under their profile.
     * @allow (get, list, update, delete) User with matching UID can access and manage their budget entries.
     * @deny (create) User cannot create budget entries under a mismatched UID.
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/budgets/{budgetId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId);
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to group data, allowing access to group members.
     * @path /groups/{groupId}
     * @allow (get, list) Any member of the group can read group details.
     * @allow (create) Any signed-in user can create a group.
     * @allow (update, delete) Only the group creator can modify or delete the group.
     * @deny (get, list) Non-members cannot access group details.
     * @principle Enforces shared access for group members and ownership for group management.
     */
    match /groups/{groupId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isMember(groupId) {
          return isSignedIn() && request.auth.uid in resource.data.members;
      }

      function isGroupCreator() {
          return isSignedIn() && request.auth.uid == get(/databases/$(database)/documents/groups/$(groupId)).data.createdBy;
      }

      function isExistingGroupCreator() {
        return isGroupCreator() && exists(/databases/$(database)/documents/groups/$(groupId));
      }

      allow get: if isMember(groupId);
      allow list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isExistingGroupCreator();
      allow delete: if isExistingGroupCreator();
    }

    /**
     * @description Controls access to shared expenses within a group, allowing access to group members.
     * @path /groups/{groupId}/sharedExpenses/{expenseId}
     * @allow (get, list) Any member of the group can read shared expense details.
     * @allow (create) Any member of the group can create a shared expense.
     * @allow (update, delete) Only the user who created the expense can modify or delete it.
     * @deny (get, list) Non-members cannot access shared expense details.
     * @principle Enforces shared access for group members and ownership for expense management.
     */
    match /groups/{groupId}/sharedExpenses/{expenseId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isMember(groupId) {
          return isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
      }

      function isExpenseCreator() {
        return request.auth.uid == get(/databases/$(database)/documents/groups/$(groupId)/sharedExpenses/$(expenseId)).data.createdBy;
      }

      function isExistingExpenseCreator() {
        return isExpenseCreator() && exists(/databases/$(database)/documents/groups/$(groupId)/sharedExpenses/$(expenseId));
      }


      allow get: if isMember(groupId);
      allow list: if isMember(groupId);
      allow create: if isMember(groupId);
      allow update: if isExistingExpenseCreator();
      allow delete: if isExistingExpenseCreator();
    }

    /**
     * @description Controls access to debt information.
     * @path /debts/{debtId}
     * @allow (get) Any signed-in user can read debt information.
     * @allow (create) Only the user who created the debt can create new debt entries.
     * @allow (update, delete) Only the user who created the debt can modify or delete debt entries.
     * @deny (create) User cannot create debt entries with a mismatched UID.
     * @principle Enforces document ownership for all operations.
     */
    match /debts/{debtId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isDebtCreator() {
        return isSignedIn() && request.auth.uid == resource.data.createdBy;
      }

      function isExistingDebtCreator() {
        return isDebtCreator();
      }

      // Fixed: Allow listing debts
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isDebtCreator();
      allow update: if isExistingDebtCreator();
      allow delete: if isExistingDebtCreator();
    }
  }
}